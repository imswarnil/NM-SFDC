---
layout: none
---
[
    {% assign docs = site.documents | where_exp: "doc",
        "doc.title" %
    }
  {% for doc in docs %
    }
  {
        "title": "{{ doc.title | escape }}",
        "url": "{{ doc.url | relative_url }}",
        "description": "{{ doc.description | strip_html | escape }}",
        "content": {
            { doc.content | strip_html | jsonify
            }
        },
        "image": "{{ doc.image | relative_url }}"
    }{% unless forloop.last %
    },
    {% endunless %
    }
  {% endfor %
    }
]